// Alec Armstrong

doctype html
html
	head 
		title Alec Armstrong ~ Pomodoro Clock
		link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet')
		link(href='//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css', rel='stylesheet')
		link(href='css/clock.css', rel='stylesheet')
	body
		// Sounds
		audio
			source(src="http://www.freesfx.co.uk/rx2/mp3s/9/10182_1367780534.mp3" type="audio/mpeg")
		audio
			source(src="http://www.freesfx.co.uk/rx2/mp3s/7/8240_1352125364.mp3" type="audio/mpeg")
		// Header
		.page-header
			h1 Pomodoro Clock
				small by Alec Armstrong
		.fluid-container
			.container
				h2 Adjust timers with
					span.symbol -
					| and
					span.symbol +
					| then press enter.
				//- end h2
				hr
				.row
					.col-md-5.col-md-offset-1.col-sm-10.col-sm-offset-2
						//- Work Section
						h2.actions#top Work Time:  
							a(href="#").symbol#work-minus -
							span#work-timer 25
							a(href="#").symbol#work-plus +
					//- end work column
					.col-md-5.col-md-offset-1.col-sm-10.col-sm-offset-2
						//- Break Section
						h2.actions Break Time:
							a(href="#").symbol#break-minus -
							span#break-timer 05
							a(href="#").symbol#break-plus +
					//- end break column
				//- end row
				
				//- Enter button
				a(href="#")#enter
					button.btn.btn-danger.btn-lg#start Start
				//- end button row
				
				//- Clock div
				.clock
					h2#type WORK
					h3 
						span#mins 25
						| :
						span#secs 00
					
				//- end clock
				
			//- end container
		//- end fluid container
		
		//- Scripts
		script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
		script(src="/js/clock.js")
	//- end body
//- end html